{
    "compilerOptions": {
      "target": "ES2021",
      "module": "commonjs",
      "moduleResolution": "node",
      "allowJs": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "resolveJsonModule": true,
      "declaration": false,
      "skipLibCheck": true,
      "sourceMap": true,
      "baseUrl": ".",
    },
    "exclude": ["node_modules", "dist", "coverage"],
    "include": ["src"]
  }